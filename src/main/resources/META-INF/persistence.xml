<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="SQLdb">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>iuh.fit.entity.Beverage</class>
    <class>iuh.fit.entity.Food</class>
    <class>iuh.fit.entity.Ingredient</class>
    <class>iuh.fit.entity.Item</class>
    <class>iuh.fit.entity.Supplier</class>


    <properties>
      <property name="jakarta.persistence.jdbc.url"
                value="jdbc:sqlserver://localhost:1433;databaseName=Food;trustServerCertificate=true" />
      <property name="jakarta.persistence.jdbc.user" value="sa" />
      <property name="jakarta.persistence.jdbc.password"
                value="12345678" />
      <property name="jakarta.persistence.jdbc.driver"
                value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
      <property name="jakarta.persistence.jdbc.dialect"
                value="org.hibernate.dialect.SQLServer2012Dialect" />
      <property name="hibernate.show_sql" value="true" />
      <property name="hibernate.format_sql" value="true" />
      <property name="hibernate.hbm2ddl.auto" value="update" />
    </properties>

  </persistence-unit>
</persistence>
